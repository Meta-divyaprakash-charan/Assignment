package calculator;

public class Area {
	
	double areaOfTriangle(double width, double height){
		double area = (0.5)*width*height;
		return area;
	}

	double areaOfRectangle(double width, double height){
		double area = width*height;
		return area;
	}
	
	double areaOfSquare(double width){
		double area = width*width;
		return area;
	}
	
	double areaOfCircle(double radius){
		double pi = 3.14;
		double area = pi*radius*radius;
		return area;
	}
	public static void main(String[] args) {Area a = new Area();
	System.out.print(a.areaOfCircle(7));

	}

}
