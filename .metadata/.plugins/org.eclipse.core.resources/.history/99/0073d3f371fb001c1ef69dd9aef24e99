package search;
import java.util.*;
public class Search{
	private int i = 0;
	
	int linearSearch(int[] array, int element){
			if(i>array.length)
				return -1;
			if(array[i]==element){
				return i;
			}
			i++;
			return linearSearch(array, element);
	};
	
	int binarySearch(int[] array, int element){
		Arrays.sort(array);
		int start = 0;
		int end = array.length-1;
		while(start<end)
		{	int i = end/2;
			if(array[i]==element){
				return i;
			}
			else if(array[i]<element){
				start = i;		
			}
			else{
				end = i;
			}
		}
		return -1;
	}
}