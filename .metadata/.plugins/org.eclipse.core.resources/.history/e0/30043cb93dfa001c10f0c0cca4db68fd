public class ArrOperations{
	/*
	 *Specification
	 *
	 *-Return length of maximum mirror in an array
	 * 
	 * @param int[] a
	 * @return int count
	 */
	int maxMirror(int[] a)
	{
		if(a==null){
			throw new IllegalArgumentException("Null array not allowed ");
		}
		int count = 0;
		for(int i = 0; i<=a.length;i++){
			int k = i;
			for(int x=a.length-1;x>=0;x--){
				int temp = 0;
				int j = x;
				while(j>=0&&i<a.length&&a[i]==a[j]){
					temp++;
					count = (count>=temp)?count:temp;
					i++;
					j--;
				}	
				i = k;
			}
		}
		return count;
	}
	
	/*
	 *Specification
	 *
	 *-Calculate number of clumps in an array
	 * 
	 * @param int[] a
	 * @return int count
	 * 
	 */			
		int numOfClumps(int[] a){
			int count = 0;
			boolean clump = true;
			if(a==null){
			throw new IllegalArgumentException("Null array not allowed ");
			}
			for(int i=0;i<a.length-1;i++){
			if(a[i]==a[i+1]){
				if(clump){
					count++;
					clump = false;
				}}
			else
				clump = true;
		}
			return count;
	}
		
		/*
		 * Specification
		 * -Calculate number of repetition of a number in an array
		 * 
		 * @param int x
		 * @param int[] a
		 * 
		 * @return int count
		 */
		int count(int x, int a[]){
			int count = 0;
			for(int i=0;i<a.length;i++)
			{
				if(a[i]==x)
					count++;
			}
			return count;
		}
		
		/*
		 * Specification
		 * -This function can rearrange an array and put Y after X
		 * 
		 * @param int[] Array
		 * @param int X
		 * @param int Y
		 * 
		 * @result int[] newArray
		 */
	
		int [] fixXY(int Array[], int X, int Y){
			int [] empty = {};
			if(Array == null||Array==empty){
				throw new IllegalArgumentException("Empth and null array are not allowed ");
			}
			
			if(count(X, Array)!=count(Y, Array)){
				throw new IllegalArgumentException("Unequal numbers of X and Y");
			}
			
			if(Array[Array.length-1]==X){
				throw new IllegalArgumentException("X at the last index of array");
			}
			int [] newArray = new int[Array.length];			
			int j=0;
			for(int i=0;i<Array.length;i++){
				if(Array[i]!=X&&Array[i]!=Y){
					newArray[i] = Array[i];
				}
				else if(Array[i]==Y){
					j=i;
				}
				else{
					if(Array[i+1]==X){
						throw new IllegalArgumentException("Two adjacents values are X.");
						}
					else{
						newArray[j] = Array[i+1];
						newArray[i+1] = Y;	
						newArray[i] = Array[i];
						i++;
						}
					}
				}
				return newArray;
		}
			
		int split(int[] array){
			int index = -1;
			int sum = 0;
			int i;
			for(i=0;i<array.length;i++){
				sum+=array[i];
			}
			if(sum%2==0){
				sum/=2;
				i = 0;
				while(sum!=0&&i<array.length){
					sum=sum-array[i];
					i++;
				}
				return i;
			}
			return index;
		}
}
