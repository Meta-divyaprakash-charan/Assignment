package hexa.calculator;
import java.util.*;

public class Main {

	public static void main(String[] args) {
		HexCalc h = new HexCalc();
		Scanner scan = new Scanner(System.in);
		String opt = "1. Add \n 2.Subtract \n 3.Multiply \n 4.Divide \n 5.Equal to \6. Greater than"
				+ "7. Less than \n 8. Exit";
		while(true) {
		System.out.println(" Choose an option \n" + opt);			
		int choice = scan.nextInt();
		if(choice == 8) {
			break;
		}
		switch(choice){
		case 1:h.add("5", "5");
		}
		}
	}

}
