package search;
import java.util.*;
public class Search{
	private int i = 0;
	private int start = 0;
	private int end;
	private int[] subArray;
	
	int linearSearch(int[] array, int element){
			if(i>=array.length)
				return -1;
			if(array[i]==element){
				return i;
			}
			i++;
			return linearSearch(array, element);
	}
	int binarySearch(int[] array, int element){
		Arrays.sort(array);
		end = array.length;
		if((start+end)%2==0)
			i = (start+end)/2;
		else
			i = (start+end+1)/2;
		if(array[i]==element){
			return i;
		}
		if(i==start||i==end){
			return -1;
		}
		else if(array[i]<element){
			start = i;
		}
		else {
			end = i;
		}
		return binarySearch(array, element);		
	}

}